%div#center-block
    - if flash[:notice].present?
        %h2= flash[:notice]
        %hr.style-two
        
    = form_tag '/login' do
        %div.form-group
            = label_tag 'name'
            = text_field_tag 'name', nil, :autofocus => true, :placeholder => 'username', :class => 'form-control'

        %div.form-group
            = label_tag 'password'
            = password_field_tag 'password', nil, :class => 'form-control', :placeholder => 'password'

        = submit_tag 'Login', :class => 'btn btn-info'
<h1>Update Profile <i class="ion-loading-a"></i></h1>

<%= form_for @user do |f| %>
    <div class="form-group">
        <%= label_tag 'Profile Picture:' %>
        <%= f.url_field :image %>
    </div>

    <div class="form-group">
        <%= label_tag 'About:' %>
        <%= f.text_area(:about, size: '100x3', :placeholder => 'write something about you') %>
    </div>

    <%= f.submit class: 'btn btn-success'%>
<% end %>